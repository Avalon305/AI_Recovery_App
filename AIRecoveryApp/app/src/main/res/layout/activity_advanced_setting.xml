<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/timg4"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-6dp"
        android:layout_marginRight="-6dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/shadow_title3">
        <!--标题-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:textSize="40dp"
            android:text="高级设置"
            />
        <ImageView
            android:id="@+id/ic_advanced_setting"
            android:layout_marginLeft="1200dp"
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_setting_grey"
            />
    </RelativeLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="当前设备类型"
                android:textSize="38sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/sys_device_name"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="38sp" />
            <Button
                android:id="@+id/btn_set_device_name"
                android:enabled="true"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_column="2"
                android:layout_row="0"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="设置"
                android:textStyle="bold"
                android:background="@drawable/button_selector2"
                android:textColor="@color/blue1"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="快速登陆"
                android:textSize="38sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_adset_quick_login_switch"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text="当前状态：关闭"
                android:textColor="#000000"
                android:textSize="38sp" />
            <Button
                android:id="@+id/btn_adset_quick_login"
                android:enabled="true"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="开启"
                android:background="@drawable/button_selector2"
                android:textStyle="bold"
                android:textColor="@color/blue1"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="肌力测试"
                android:textSize="38sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_adset_strength_test"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text="当前状态：关闭"
                android:textColor="#000000"
                android:textSize="38sp" />
            <Button
                android:id="@+id/btn_adset_strength_test"
                android:enabled="true"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="开启"
                android:background="@drawable/button_selector2"
                android:textColor="@color/blue1"
                android:textStyle="bold"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="标定界面"
                android:textSize="38sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="38sp" />
            <Button
                android:id="@+id/btn_goto_calibration"
                android:enabled="true"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="进入"
                android:textStyle="bold"
                android:background="@drawable/button_selector2"
                android:textColor="@color/blue1"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="医护设置密码"
                android:textSize="38sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_medical_pwd"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="38sp" />
            <Button
                android:id="@+id/btn_medical_pwd"
                android:enabled="true"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="设置"
                android:textStyle="bold"
                android:background="@drawable/button_selector2"
                android:textColor="@color/blue1"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="软件版本"
                android:textSize="38sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adset_version"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="38sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="440dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/update_sys_setting"
                android:enabled="true"
                android:layout_width="260dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="      更新并重启"
                android:textStyle="bold"
                android:background="@drawable/button_selector2"
                android:textColor="@color/blue1"
                android:textSize="30sp"/>

            <ImageView
                android:id="@+id/img_update_sys_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/ic_update" />


        </RelativeLayout>

        <Button
            android:id="@+id/sys_btn_return"
            android:enabled="true"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="返回"
            android:background="@drawable/button_selector2"
            android:textColor="@color/blue1"
            android:textStyle="bold"
            android:textSize="30sp"/>

    </LinearLayout>
</RelativeLayout>
