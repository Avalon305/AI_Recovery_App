<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background2"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-6dp"
        android:layout_marginRight="-6dp"
        android:layout_marginTop="-6dp"
        android:background="@drawable/titlebg">
        <!--标题-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:textSize="40dp"
            android:text="高级设置"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="快速登陆"
                android:textSize="38sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_adset_quick_login_switch"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text="当前状态：关闭"
                android:textColor="#000000"
                android:textSize="38sp" />
            <Button
                android:id="@+id/btn_adset_quick_login"
                android:enabled="true"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="开启"
                android:background="@drawable/button_selector"
                android:textColor="#2b2b2b"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="肌力测试"
                android:textSize="38sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_adset_strength_test"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text="当前状态：关闭"
                android:textColor="#000000"
                android:textSize="38sp" />
            <Button
                android:id="@+id/btn_adset_strength_test"
                android:enabled="true"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="开启"
                android:background="@drawable/button_selector"
                android:textColor="#2b2b2b"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="标定界面"
                android:textSize="38sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="38sp" />
            <Button
                android:id="@+id/btn_adset_rate"
                android:enabled="true"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="进入"
                android:background="@drawable/button_selector"
                android:textColor="#2b2b2b"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="软件版本"
                android:textSize="38sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adset_version"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="38sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="440dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/update_sys_setting"
                android:enabled="true"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="       更新并重启"
                android:background="@drawable/button_selector"
                android:textColor="#2b2b2b"
                android:textSize="30sp"/>

            <ImageView
                android:id="@+id/img_update_sys_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/update1" />


        </RelativeLayout>

        <Button
            android:id="@+id/sys_btn_return"
            android:enabled="true"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="返回"
            android:background="@drawable/button_selector"
            android:textColor="#2b2b2b"
            android:textSize="30sp"/>

    </LinearLayout>
</RelativeLayout>
