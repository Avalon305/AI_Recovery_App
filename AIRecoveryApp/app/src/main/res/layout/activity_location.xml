<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-6dp"
        android:layout_marginRight="-6dp"
        android:layout_marginTop="-6dp"
        android:background="@drawable/titlebg">
        <!--标题-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:text="连测定位"
            android:textSize="40dp" />
    </RelativeLayout>
    <!--连测定位-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingTop="40dp"
        android:text=""
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--图标-->
                <ImageView
                    android:id="@+id/iv_location_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp" />
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/iv_location_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:layout_below="@+id/iv_location_1" />
                <ImageView
                    android:id="@+id/iv_location_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:layout_below="@+id/iv_location_2" />
                <!--连测内容，暂时仅为一个设备的参数-->
                <TextView
                    android:id="@+id/tv_location_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_location_1"
                    android:layout_toRightOf="@+id/iv_location_1"
                    android:layout_marginLeft="10dp"
                    android:textSize="40sp"
                    android:text="" />
                <TextView
                    android:id="@+id/tv_location_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_location_item1"
                    android:layout_alignTop="@+id/iv_location_2"
                    android:layout_toRightOf="@+id/iv_location_2"
                    android:layout_marginLeft="10dp"
                    android:textSize="40sp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_location_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_location_item2"
                    android:layout_alignTop="@+id/iv_location_3"
                    android:layout_toRightOf="@+id/iv_location_3"
                    android:layout_marginLeft="10dp"
                    android:textSize="40sp"
                    android:text="" />
                <!--连测结果-->
                <TextView
                    android:id="@+id/tv_location_item1res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_location_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textSize="40sp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_location_item2res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_location_2"
                    android:layout_below="@+id/tv_location_item1res"
                    android:layout_alignLeft="@+id/tv_location_item1res"
                    android:textSize="40sp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_location_item3res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_location_3"
                    android:layout_below="@+id/tv_location_item2res"
                    android:layout_alignLeft="@+id/tv_location_item2res"
                    android:textSize="40sp"
                    android:text="" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="250dp"
            android:orientation="vertical">
            <!--警示图标-->
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/iv_location_wheel"
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_marginLeft="60dp"
                android:paddingTop="30dp"
                android:src="@drawable/wheel" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--定位信息-->
        <TextView
            android:id="@+id/tv_location_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:layout_weight="1"
            android:text="" />
        <!--再次定位按钮-->
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_location_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:enabled="false"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:text="再次定位"
            android:textColor="@color/qmui_config_color_white"
            android:textSize="30sp"
            android:visibility="gone"
            app:qmui_radius="4dp"
            app:qmui_backgroundColor="#FF059CFF"
            app:qmui_borderWidth="0dp"
            app:qmui_isRadiusAdjustBounds="true"
             />

        <Button
            android:id="@+id/btn_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="跳转待机UI[测试用]" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--系统设置-->
        <TextView
            android:id="@+id/tv_location_sysset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:layout_alignParentBottom="true"
            android:background="#f0f0f0"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:text="系统设置"
            android:textSize="25dp" />
    </RelativeLayout>

</LinearLayout>
