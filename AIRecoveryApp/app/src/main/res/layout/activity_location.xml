<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/timg4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-6dp"
        android:layout_marginRight="-6dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/shadow_title3">
        <!--标题-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:text="联测定位"
            android:textSize="40dp" />

        <!--<Button-->
            <!--android:id="@+id/btn_top"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="200dp"-->
            <!--android:layout_marginTop="40dp"-->
            <!--android:textSize="25dp"-->
            <!--android:text="发送到达顶端的广播" />-->
        <!--<Button-->
            <!--android:id="@+id/btn_bottom"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="500dp"-->
            <!--android:layout_marginTop="40dp"-->
            <!--android:textSize="25dp"-->
            <!--android:text="发送到达底端的广播" />-->

    </RelativeLayout>
    <!--连测定位-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingTop="40dp"
        android:text=""
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--图标-->
                <ImageView
                    android:id="@+id/iv_location_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp" />
                <ImageView
                    android:id="@+id/iv_location_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_below="@+id/iv_location_1" />
                <ImageView
                    android:id="@+id/iv_location_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_below="@+id/iv_location_2" />
                <!--连测内容，暂时仅为一个设备的参数-->
                <TextView
                    android:id="@+id/tv_location_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_location_1"
                    android:layout_toRightOf="@+id/iv_location_1"
                    android:layout_marginLeft="10dp"
                    android:textSize="40sp"
                    android:text="联测参数1" />
                <TextView
                    android:id="@+id/tv_location_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_location_item1"
                    android:layout_alignTop="@+id/iv_location_2"
                    android:layout_toRightOf="@+id/iv_location_2"
                    android:layout_marginLeft="10dp"
                    android:textSize="40sp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_location_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_location_item2"
                    android:layout_alignTop="@+id/iv_location_3"
                    android:layout_toRightOf="@+id/iv_location_3"
                    android:layout_marginLeft="10dp"
                    android:textSize="40sp"
                    android:text="" />
                <!--连测结果-->
                <TextView
                    android:id="@+id/tv_location_item1res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_location_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textSize="40sp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_location_item2res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_location_2"
                    android:layout_below="@+id/tv_location_item1res"
                    android:layout_alignLeft="@+id/tv_location_item1res"
                    android:textSize="40sp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_location_item3res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_location_3"
                    android:layout_below="@+id/tv_location_item2res"
                    android:layout_alignLeft="@+id/tv_location_item2res"
                    android:textSize="40sp"
                    android:text="" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="300dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/gear_medium"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gear_medium"/>
                <ImageView
                    android:id="@+id/gear_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gear_small"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/gear"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gear"/>


            <!--&lt;!&ndash;警示图标&ndash;&gt;-->
            <!--<pl.droidsonroids.gif.GifImageView-->
                <!--android:id="@+id/iv_location_wheel"-->
                <!--android:layout_width="200dp"-->
                <!--android:layout_height="240dp"-->
                <!--android:layout_marginLeft="60dp"-->
                <!--android:paddingTop="30dp"-->
                <!--android:src="@drawable/wheel" />-->

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--定位信息-->
        <TextView
            android:id="@+id/tv_location_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:layout_weight="1"
            android:text="" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_location_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:enabled="false"
                android:paddingBottom="10dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="10dp"
                android:text="再次定位"
                android:background="@drawable/button_selector"
                android:textStyle="bold"
                android:textColor="@color/blue1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"
                android:paddingBottom="10dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="10dp"
                android:text="跳过定位"
                android:background="@drawable/button_selector"
                android:visibility="invisible"
                android:textStyle="bold"
                android:textColor="@color/blue1"
                android:textSize="30sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
