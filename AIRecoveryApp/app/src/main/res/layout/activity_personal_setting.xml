<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".activity.PersonalSettingActivity">
    <!--上侧标题栏-->
    <RelativeLayout
        android:id="@+id/rl_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-6dp"
        android:layout_marginRight="-6dp"
        android:layout_marginTop="-6dp"
        android:background="@drawable/titlebg">
        <!--页面标题-->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="5dp"
            android:text="医护设置"
            android:textSize="40sp" />
        <!--欢迎语-->
        <TextView
            android:id="@+id/tv_welcome_note"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/tv_user_name"
            android:text="欢迎您,"
            android:textSize="40dp" />
        <!--显示用户名-->
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/iv_ps_state"
            android:text="admin"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/iv_ps_state"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/guanliyuan1" />
    </RelativeLayout>

    <!--左侧功能按钮-->
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/rl_top_title"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp">
        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择要调整的部分"
            android:textSize="40sp"/>
        <!--“参数0”按钮-->
        <Button
            android:id="@+id/btn_param_0"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button_selector"
            android:visibility="gone"
            android:text="参数0"
            android:textColor="#2b2b2b"
            android:textSize="30sp" />
        <!--“参数1”按钮-->
        <Button
            android:id="@+id/btn_param_1"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button_selector"
            android:visibility="gone"
            android:text="参数1"
            android:textColor="#2b2b2b"
            android:textSize="30sp" />
        <!--“参数2”按钮-->
        <Button
            android:id="@+id/btn_param_2"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button_selector"
            android:visibility="gone"
            android:text="参数2"
            android:textColor="#2b2b2b"
            android:textSize="30sp" />
        <!--“参数3”按钮-->
        <Button
            android:id="@+id/btn_param_3"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button_selector"
            android:visibility="gone"
            android:text="参数3"
            android:textColor="#2b2b2b"
            android:textSize="30sp" />
        <!--“参数4”按钮-->
        <Button
            android:id="@+id/btn_param_4"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button_selector"
            android:visibility="gone"
            android:text="参数4"
            android:textColor="#2b2b2b"
            android:textSize="30sp" />
        <!--“设置模式”按钮-->
        <Button
            android:id="@+id/btn_setting_mode"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button_selector"
            android:text="设置模式"
            android:textColor="#2b2b2b"
            android:textSize="30sp" />
        <RelativeLayout
            android:id="@+id/rl_show_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--提示文本 当前模式是：-->
            <TextView
                android:id="@+id/tv_mode_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前模式是："
                android:textSize="30sp"/>
            <!--当前模式-->
            <TextView
                android:id="@+id/tv_cur_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_mode_note"
                android:textSize="30sp"/>
        </RelativeLayout>

    </LinearLayout>

    <!--设备图片显示-->
    <ImageView
        android:id="@+id/iv_dev_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top_title"
        android:layout_toRightOf="@id/ll_left"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="120dp"
        />

    <!--调整动画显示部分-->
    <RelativeLayout
        android:id="@+id/relative_layout_cartoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="60dp">
        <!--底板-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backboard4"/>
        <!--当前参数名-->
        <TextView
            android:id="@+id/tv_tips_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="参数名"
            android:textSize="50sp"/>
        <RelativeLayout
            android:id="@+id/rl_number"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_tips_right">
            <!--当前调整部分的数值-->
            <com.bdl.airecovery.widget.NumTextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:includeFontPadding="false"
                android:text="0"
                android:textSize="80sp"/>
        </RelativeLayout>
        <!--减号-->
        <ImageView
            android:id="@+id/iv_param_minus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toLeftOf="@id/rl_number"
            android:layout_alignBottom="@id/rl_number"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:rotation="180"
            android:src="@drawable/mode_minus_selector" />
        <!--加号-->
        <ImageView
            android:id="@+id/iv_param_add"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/rl_number"
            android:layout_alignBottom="@id/rl_number"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/mode_plus_selector" />
        <!--拖动条-->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rl_number"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:maxHeight="50dip"
            android:minHeight="50dip"
            android:progress="10"
            android:background="@drawable/seekbar_bgimage"
            android:progressDrawable="@drawable/seekbar_bg"
            android:thumb="@drawable/arrow" />
    </RelativeLayout>

    <!--中下按钮部分-->
    <LinearLayout
        android:id="@+id/rl_bottom_mid"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--保存按钮-->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_alignBottom="@+id/btn_map_end"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btn_map_end"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button_selector"
            android:text="保存"
            android:textColor="#2b2b2b"
            android:textSize="30sp" />
        <!--返回按钮-->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/btn_map_end"
            android:layout_alignBottom="@+id/btn_map_end"
            android:layout_marginLeft="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button_selector"
            android:text="返回"
            android:textColor="#2b2b2b"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>