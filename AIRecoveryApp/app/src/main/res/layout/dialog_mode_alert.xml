<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="850sp"
    android:layout_height="500sp"
    android:background="@drawable/dialog_shape">
    <!--警示-->
    <TextView
        android:id="@+id/tv_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="警示" />
    <!--分割线-->
    <!--<ImageView-->
    <!--android:id="@+id/iv_alert_split"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="5dp"-->
    <!--android:layout_marginLeft="15dp"-->
    <!--android:layout_marginRight="15dp"-->
    <!--android:background="#f4ea2a" />-->
    <!--内容-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--图标-->
        <ImageView
            android:id="@+id/iv_alert_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/qmui_icon_chevron" />
        <!--文本内容-->
        <TextView
            android:id="@+id/tv_alert_content"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/iv_alert_1"
            android:text="您已调整了反向负重"
            android:textColor="#2F2F2F"
            android:textSize="30dp" />
        <!--图标-->
        <ImageView
            android:id="@+id/iv_alert_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_1"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/qmui_icon_chevron" />
        <!--文本内容-->
        <TextView
            android:id="@+id/tv_alert_positive1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_1"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/iv_alert_2"
            android:text="正向负重："
            android:textColor="#2F2F2F"
            android:textSize="30dp" />
        <!--获取正向力值-->
        <TextView
            android:id="@+id/tv_alert_getpositive"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_1"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tv_alert_positive1"
            android:text="21"
            android:textColor="#2F2F2F"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_alert_positive2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_1"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tv_alert_getpositive"
            android:text=" 千克"
            android:textColor="#2F2F2F"
            android:textSize="30dp" />
        <!--图标-->
        <ImageView
            android:id="@+id/iv_alert_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_2"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/qmui_icon_chevron" />
        <!--文本内容-->
        <TextView
            android:id="@+id/tv_alert_positive3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_2"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/iv_alert_2"
            android:text="反向负重："
            android:textColor="#2F2F2F"
            android:textSize="30dp" />
        <!--获取反向力值-->
        <TextView
            android:id="@+id/tv_alert_getinversus"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_2"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tv_alert_positive3"
            android:text="21"
            android:textColor="#2F2F2F"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_alert_positive4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_2"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tv_alert_getinversus"
            android:text=" 千克"
            android:textColor="#2F2F2F"
            android:textSize="30dp" />
        <!--图标-->
        <ImageView
            android:id="@+id/iv_alert_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_3"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/qmui_icon_chevron" />
        <!--文本内容-->
        <TextView
            android:id="@+id/tv_alert_positive5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_3"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/iv_alert_4"
            android:text="反向负重超高："
            android:textColor="#2F2F2F"
            android:textSize="30dp" />
        <!--获取超高值-->
        <TextView
            android:id="@+id/tv_alert_highvalue"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/tv_alert_positive5"
            android:layout_alignBottom="@+id/tv_alert_positive5"
            android:layout_toEndOf="@+id/tv_alert_positive5"
            android:text="21"
            android:textColor="#2F2F2F"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_alert_positive6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_alert_3"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tv_alert_highvalue"
            android:text=" %"
            android:textColor="#2F2F2F"
            android:textSize="30dp" />
        <!--确定按钮-->
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_password_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_alert_positive5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="10dp"
            android:text="我知道了"
            android:textColor="#007AFF"
            android:textSize="30sp"
            app:qmui_borderWidth="0dp"
            app:qmui_isRadiusAdjustBounds="true" />
    </RelativeLayout>

</LinearLayout>