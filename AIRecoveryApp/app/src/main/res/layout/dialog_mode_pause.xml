<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--温馨提示-->
    <TextView
        android:id="@+id/tv_pause_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
        android:textSize="40dp"
        android:textColor="@color/btn_ghost_blue_text_normal"
        android:text="温馨提示:" />
    <!--分割线-->
    <ImageView
        android:id="@+id/iv_pause_split"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f4ea2a"/>
    <!--内容-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--图标-->
        <ImageView
            android:id="@+id/iv_pause_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/qmui_icon_chevron" />
        <ImageView
            android:id="@+id/iv_pause_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_pause_1"
            android:layout_marginLeft="80dp"
            android:src="@drawable/qmui_icon_chevron" />
        <!--文本内容-->
        <TextView
            android:id="@+id/tv_pause_please1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_pause_1"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:text="按开始键继续运动 !" />
        <TextView
            android:id="@+id/tv_pause_please2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_pause_1"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_pause_please1"
            android:textSize="30dp"
            android:text="按结束键结束运动 !" />
        <!--开始按钮-->
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_pause_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="380dp"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textSize="25dp"
            android:text="开始"
            android:textColor="#000"
            app:qmui_backgroundColor="#EAEAEA"
            app:qmui_borderColor="#1591e9"
            app:qmui_borderWidth="2dp"
            app:qmui_isRadiusAdjustBounds="true" />
        <!--结束按钮-->
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_pause_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_pause_start"
            android:layout_marginRight="30dp"
            android:layout_marginTop="380dp"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textSize="25dp"
            android:text="结束"
            android:textColor="#000"
            app:qmui_backgroundColor="#EAEAEA"
            app:qmui_borderColor="#1591e9"
            app:qmui_borderWidth="2dp"
            app:qmui_isRadiusAdjustBounds="true" />
    </RelativeLayout>
</LinearLayout>