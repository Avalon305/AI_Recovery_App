<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600sp"
    android:layout_height="300sp"
    android:orientation="vertical"
    android:background="@drawable/dialog_shape">

    <TextView
        android:id="@+id/medium_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:gravity="center_horizontal"
        android:text="温馨提示"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000000" />
    <!--分割线-->
    <!--内容-->
    <TextView
        android:id="@+id/medium_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_above="@+id/iv_time_pic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:gravity="center_horizontal"
        android:text="休息时间"
        android:textColor="@color/qmui_config_color_red"
        android:textSize="30dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_time_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="150dp"
            android:src="@drawable/mode_time" />

        <TextView
            android:id="@+id/medium_dialog_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/iv_time_pic"
            android:gravity="center_horizontal"
            android:textColor="@color/qmui_config_color_red"
            android:textSize="80dp" />

    </RelativeLayout>
</LinearLayout>